	( #{testcaseId,jdbcType=VARCHAR},#{testcaseName,jdbcType=VARCHAR},#{modelId,jdbcType=VARCHAR},#{catalog,jdbcType=VARCHAR},#{createDate,jdbcType=VARCHAR})
